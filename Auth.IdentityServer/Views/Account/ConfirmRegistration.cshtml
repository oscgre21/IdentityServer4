@model Auth.IdentityServer.Models.ConfirmRegistrationModel
@{
    ViewData["Title"] = "Confirmar registro";
    Layout = "_LoginLayout";
}
<div class="container">
    @*<div class="row"><partial name="_ValidationSummary" /></div>*@
    <div class="row align-items-center justify-content-center">
        <div class="col-md-6">
            <div class="form-block">
                <div class="text-center mb-2">
                    <h3 style="margin-bottom: 10px;">Registra una contraseña para tu cuenta de usuario</h3>
                    <partial name="_ValidationSummary" />

                    <!-- <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p> -->
                </div>
                <form method="post">
                    <div class="form-group">
                        <label>Cuenta</label>
                        <input class="form-control" placeholder="" asp-for="Email" disabled>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input class="form-control" placeholder="" asp-for="Password" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input type="password" class="form-control" placeholder="" asp-for="ConfirmPassword" autocomplete="off">
                    </div>
                    <input asp-for="Email" type="hidden" class="form-control" />
                    <input asp-for="ConfirmationCode" type="hidden" class="form-control" />
                    <input asp-for="ReturnUrl" type="hidden" class="form-control" />

                    <button class="btn btn-primary" name="button" value="login">Registrar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
